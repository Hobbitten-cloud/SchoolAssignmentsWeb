@model Assignment

@{
	string action = ViewBag.Action ?? string.Empty;
}


<form method="post" asp-controller="Assignment" asp-action="@action">
	@if (action.ToLower() == "Edit")
	{
		<input type="hidden" asp-for="Id" />
		<input type="hidden" asp-for="RowVersion"/>
	}

	<div class="text-danger" asp-validation-summary="All"></div>

	<div class="row mb-3">
		<div class="col-2">
			<label class="col" asp-for="Title"></label>
		</div>
		<div class="col-6">
			<input type="text" asp-for="Title" class="form-control" />
		</div>
		<div class="col-10">
			<span class="text-danger" asp-validation-for="Title"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-2">
			<label class="col" asp-for="Description"></label>
		</div>
		<div class="col-6">
			<input type="text" asp-for="Description" class="form-control" />
		</div>
		<div class="col-10">
			<span class="text-danger" asp-validation-for="Description"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-2">
			<label class="col" asp-for="Subjects"></label>
		</div>
		<div class="col-6">
			<select asp-for="Subjects" asp-items="Html.GetEnumSelectList<Subjects>()">
				<option value="" disabled selected>Vælg Fag</option>
			</select>
		</div>
		<div class="col-10">
			<span class="text-danger" asp-validation-for="Subjects"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div>
			<button type="submit" class="btn btn-primary">Save</button>
			<a asp-controller="Assignment" asp-action="Index" class="btn btn-secondary">Back to List</a>
		</div>
	</div>
</form>